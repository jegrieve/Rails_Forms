  <%= form_with model: @user do |form| %>
    <div>
    <%= form.label :email, "Your email here"%><br>
    <%= form.email_field :email, placeholder: "example@example.com"  %>
    <% @user.errors.full_messages_for(:email).each do |message| %>
        <div><%= message %></div>
      <% end %>
  </div>
  <div>
  <%= form.label :username, "Your username here"%><br>
  <%= form.text_field :username, placeholder: "bigchungus123" %>
  <% @user.errors.full_messages_for(:username).each do |message| %>
    <div><%= message %></div>
  <% end %>
</div>
<div>
<%= form.label :password, "Enter password here"%><br>
<%= form.password_field :password  %>
<% @user.errors.full_messages_for(:password).each do |message| %>
    <div><%= message %></div>
  <% end %>
</div>

<div>
<%= form.submit %>
</div>
  <% end %>